<Window x:Class="ASM_PRN212_BL3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Quản Lý Flashcard - Chế Độ Quản Trị" 
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA">

    <!-- DataContext is set in code-behind to avoid XAML type resolution issues -->

    <Window.Resources>
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#357ABD"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#E74C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2ECC71"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#27AE60"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="White" Padding="20" CornerRadius="12" Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Opacity="0.12" ShadowDepth="4"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Flashcard Manager" 
                                       FontSize="24" FontWeight="Bold" Foreground="#2C3E50"/>
                            <TextBlock Text="Quản lý bộ thẻ và flashcard của bạn" 
                                       FontSize="13" Foreground="#7F8C8D" Margin="0,2,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <Button x:Name="btnLogout" Grid.Column="1" 
                        Content="Đăng Xuất" 
                        Style="{StaticResource DangerButtonStyle}"
                        Click="BtnLogout_Click"
                        VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="340"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" 
                    CornerRadius="12" Margin="0,0,12,0" Padding="20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" Opacity="0.12" ShadowDepth="4"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Tiêu đề -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="Danh Sách Bộ Thẻ" 
                                   FontSize="18" FontWeight="Bold" 
                                   Foreground="#2C3E50" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Form tạo deck mới -->
                    <Border Grid.Row="1" Background="#F8FAFB" CornerRadius="8" 
                            Padding="15" Margin="0,0,0,20" BorderBrush="#E1E8ED" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Tạo bộ thẻ mới" FontSize="13" 
                                       FontWeight="SemiBold" Margin="0,0,0,10" Foreground="#34495E"/>
                            <TextBox Text="{Binding NewDeckName, UpdateSourceTrigger=PropertyChanged}" 
                                     Padding="12,10" FontSize="13" 
                                     BorderBrush="#D5DBDB" BorderThickness="1">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="6">
                                                        <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <Button Content="➕ Tạo Bộ Thẻ" 
                                    Command="{Binding CreateDeckCommand}"
                                    Style="{StaticResource SuccessButtonStyle}"
                                    HorizontalAlignment="Stretch" Margin="0,12,0,0"/>
                        </StackPanel>
                    </Border>

                    <ListBox Grid.Row="3" 
                             ItemsSource="{Binding Decks}" 
                             SelectedItem="{Binding SelectedDeck}"
                             BorderThickness="0" Background="Transparent"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="15" Margin="0,0,0,10" 
                                        Background="#F8FAFB" CornerRadius="8"
                                        BorderBrush="#E1E8ED" BorderThickness="1">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#E8F4F8"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" Background="#4A90E2" 
                                                Width="35" Height="35" CornerRadius="8" 
                                                Margin="0,0,12,0">
                                            <TextBlock Text="📋" FontSize="18" 
                                                       HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center"/>
                                        </Border>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}" 
                                                       FontSize="14" FontWeight="SemiBold" 
                                                       Foreground="#2C3E50"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <TextBlock Text="📝" FontSize="11" Margin="0,0,5,0"/>
                                                <TextBlock FontSize="12" Foreground="#7F8C8D">
                                                    <Run Text="{Binding CardCount, Mode=OneWay}"/>
                                                    <Run Text=" thẻ"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Button Grid.Row="4" Content="Xóa Bộ Thẻ Đã Chọn" 
                            Command="{Binding DeleteDeckCommand}"
                            Style="{StaticResource DangerButtonStyle}"
                            HorizontalAlignment="Stretch" Margin="0,20,0,0"/>
                </Grid>
            </Border>

            <Border Grid.Column="1" Background="White" 
                    CornerRadius="12" Margin="12,0,0,0" Padding="20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" Opacity="0.12" ShadowDepth="4"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Tiêu đề -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock FontSize="18" FontWeight="Bold" Foreground="#2C3E50">
                                <Run Text="Flashcards - "/>
                                <Run Text="{Binding SelectedDeck.Name, FallbackValue='Chọn bộ thẻ'}" 
                                     Foreground="#4A90E2"/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>

                    <!-- Form thêm flashcard mới -->
                    <Border Grid.Row="1" Background="#F8FAFB" CornerRadius="8" 
                            Padding="20" Margin="0,0,0,20" BorderBrush="#E1E8ED" BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Thêm thẻ mới" FontSize="13" 
                                       FontWeight="SemiBold" Margin="0,0,0,15" Foreground="#34495E"/>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Thuật ngữ (Term)" FontSize="11" 
                                               Margin="0,0,0,6" Foreground="#7F8C8D"/>
                                    <TextBox Text="{Binding NewTerm, UpdateSourceTrigger=PropertyChanged}" 
                                             Padding="12,10" FontSize="13"
                                             BorderBrush="#D5DBDB" BorderThickness="1">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="Background" Value="White"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="TextBox">
                                                            <Border Background="{TemplateBinding Background}"
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                                    CornerRadius="6">
                                                                <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="10,0,10,0">
                                    <TextBlock Text="Định nghĩa (Definition)" FontSize="11" 
                                               Margin="0,0,0,6" Foreground="#7F8C8D"/>
                                    <TextBox Text="{Binding NewDefinition, UpdateSourceTrigger=PropertyChanged}" 
                                             Padding="12,10" FontSize="13"
                                             BorderBrush="#D5DBDB" BorderThickness="1">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="Background" Value="White"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="TextBox">
                                                            <Border Background="{TemplateBinding Background}"
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                                    CornerRadius="6">
                                                                <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                </StackPanel>

                                <Button Grid.Column="2" Content="➕ Thêm" 
                                        Command="{Binding AddFlashcardCommand}"
                                        Style="{StaticResource SuccessButtonStyle}"
                                        VerticalAlignment="Bottom" Margin="10,0,0,0"/>
                            </Grid>
                        </Grid>
                    </Border>

                    <ListView Grid.Row="2" 
                              ItemsSource="{Binding Flashcards}" 
                              SelectedItem="{Binding SelectedFlashcard}"
                              BorderThickness="1" BorderBrush="#E1E8ED"
                              Background="White">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID" Width="60">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Id}" FontSize="12" 
                                                       Foreground="#7F8C8D" FontWeight="SemiBold"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Thuật Ngữ" Width="200">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Term}" FontSize="13" 
                                                       Foreground="#2C3E50" FontWeight="SemiBold"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Định Nghĩa" Width="280">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Definition}" FontSize="13" 
                                                       Foreground="#34495E" TextWrapping="Wrap"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="⭐" Width="60">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding IsBookmarked}" FontSize="12"
                                                       HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <!-- Buttons quản lý flashcard - evenly spaced -->
                    <UniformGrid Grid.Row="3" Columns="3" Margin="0,15,0,0" HorizontalAlignment="Stretch">
                        <Button Content="Xóa Thẻ" 
                                Command="{Binding DeleteFlashcardCommand}"
                                Style="{StaticResource DangerButtonStyle}"
                                Margin="0,0,8,0" HorizontalAlignment="Stretch"/>
                        <Button Content="Đánh Dấu" 
                                Command="{Binding ToggleBookmarkCommand}"
                                CommandParameter="{Binding SelectedFlashcard}"
                                Style="{StaticResource PrimaryButton}"
                                Margin="4,0,4,0" HorizontalAlignment="Stretch"/>
                        <Button Content="Làm Mới" 
                                Command="{Binding LoadDecksCommand}"
                                Style="{StaticResource PrimaryButton}"
                                Margin="8,0,0,0" HorizontalAlignment="Stretch"/>
                    </UniformGrid>
                </Grid>
            </Border>
        </Grid>

        <!-- STATUS BAR -->
        <Border Grid.Row="2" Background="#2C3E50" Padding="15,12" 
                Margin="0,20,0,0" CornerRadius="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" 
                           Foreground="White" FontSize="13" VerticalAlignment="Center"
                           FontWeight="Medium"/>
                <Border Grid.Column="1" Background="#2ECC71" 
                        Padding="12,6" CornerRadius="6">
                    <TextBlock Text="Admin Mode" 
                               Foreground="White" FontSize="12" FontWeight="Bold"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
