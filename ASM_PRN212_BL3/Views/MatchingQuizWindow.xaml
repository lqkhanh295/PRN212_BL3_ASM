<Window x:Class="ASM_PRN212_BL3.Views.MatchingQuizWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Ghep the - Bai kiem tra"
        Height="750" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA"
        Loaded="Window_Loaded"
        FontFamily="Segoe UI"> <!-- Default font for Vietnamese text -->

    <!-- LUU FILE BANG UTF-8 -->

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ================= HEADER ================= -->
        <Border Grid.Row="0" Background="White" CornerRadius="12" Padding="24" Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Opacity="0.12" ShadowDepth="4"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Tieu de -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Width="50" Height="50" CornerRadius="10" Margin="0,0,15,0" Background="#9B59B6">
                        <Grid>
                            <!-- Use numeric entity and emoji font only for the icon -->
                            <TextBlock x:Name="headerIcon" Text="&#x1F9E9;" FontFamily="Segoe UI Emoji" FontSize="26"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock x:Name="txtTitle" Text="Ghep the" FontSize="24" FontWeight="Bold" Foreground="#2C3E50"/>
                        <TextBlock x:Name="txtDeckName" Text="Chon bo the de bat dau"
                                   FontSize="13" Foreground="#7F8C8D" Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Thoi gian -->
                <Border Grid.Column="1" Background="#E8F4F8" Padding="20,12" CornerRadius="10" Margin="0,0,15,0">
                    <StackPanel>
                        <!-- Separate emoji run from Vietnamese text -->
                        <TextBlock FontFamily="Segoe UI" FontSize="11" Foreground="#7F8C8D" HorizontalAlignment="Center">
                            <Run FontFamily="Segoe UI Emoji" Text="&#x23F1;"/>
                            <Run Text=" Thoi gian"/>
                        </TextBlock>
                        <TextBlock x:Name="txtTimer" Text="60s" FontSize="28" FontWeight="Bold"
                                   Foreground="#3498DB" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Quay lai -->
                <Button x:Name="btnBack" Grid.Column="2" Padding="20,12" Background="#95A5A6" Foreground="White"
                        BorderThickness="0" FontSize="13" FontWeight="SemiBold"
                        Cursor="Hand" Click="BtnBack_Click">
                    <!-- Use TextBlock with Runs so Vietnamese part uses Segoe UI, icon uses emoji font -->
                    <TextBlock>
                        <Run FontFamily="Segoe UI Emoji" Text="&#x2B05;"/>
                        <Run Text=" Quay lai"/>
                    </TextBlock>
                </Button>
            </Grid>
        </Border>

        <!-- ================= MAIN CONTENT ================= -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: Danh sach bo the -->
            <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="20" Margin="0,0,15,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" Opacity="0.12" ShadowDepth="4"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <Border Background="#FFF4E6" Width="36" Height="36" CornerRadius="8" Margin="0,0,10,0">
                            <Grid>
                                <TextBlock x:Name="listHeaderIcon" Text="&#x1F4DA;" FontFamily="Segoe UI Emoji" FontSize="18"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <TextBlock Text="Chon bo the" FontSize="16" FontWeight="Bold"
                                   Foreground="#2C3E50" VerticalAlignment="Center"/>
                    </StackPanel>

                    <ListBox x:Name="lstDecks" Grid.Row="1" BorderThickness="0" Background="Transparent"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             SelectionChanged="LstDecks_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="15" Margin="0,0,0,10" Background="#F8FAFB"
                                        CornerRadius="8" BorderBrush="#E1E8ED" BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Width="32" Height="32" CornerRadius="6" Background="#9B59B6" Margin="0,0,10,0">
                                            <Grid>
                                                <TextBlock FontFamily="Segoe UI Emoji" Text="&#x1F4C2;" FontSize="16"
                                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Name}" FontSize="13" FontWeight="SemiBold"/>
                                            <TextBlock FontSize="11" Foreground="#95A5A6">
                                                <Run FontFamily="Segoe UI Emoji" Text="&#x1F516;"/>
                                                <Run Text=" " />
                                                <Run Text="{Binding CardCount, Mode=OneWay}"/>
                                                <Run Text=" the"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Button Grid.Row="2" x:Name="btnStartQuiz" Padding="16,14" Background="#9B59B6" Foreground="White"
                            FontWeight="Bold" IsEnabled="False"
                            Click="BtnStartQuiz_Click">
                        <TextBlock>
                            <Run FontFamily="Segoe UI Emoji" Text="&#x25B6;"/>
                            <Run Text=" Bat dau ghep the"/>
                        </TextBlock>
                    </Button>
                </Grid>
            </Border>

            <!-- RIGHT: Khu vuc choi -->
            <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" HorizontalAlignment="Center">
                        <TextBlock x:Name="txtInitialMessage" Text="Vui long chon bo the va bam 'Bat dau'" Foreground="#7F8C8D"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock x:Name="txtProgress" Text="Tien do:0 /0" Margin="0,0,10,0"/>
                            <ProgressBar x:Name="progressBar" Width="200" Height="10"/>
                        </StackPanel>
                    </StackPanel>

                    <ItemsControl Grid.Row="1" x:Name="itemsMatching">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="180" Height="80" Margin="8" Padding="12"
                                        Background="#FAFBFC" CornerRadius="8"
                                        MouseLeftButtonDown="Card_Click">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Label}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Content}" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                        <Button x:Name="btnRestart" Click="BtnRestart_Click" Margin="5">
                            <TextBlock>
                                <Run FontFamily="Segoe UI Emoji" Text="&#x1F504;"/>
                                <Run Text=" Lam lai"/>
                            </TextBlock>
                        </Button>
                        <Button x:Name="btnBack2" Click="BtnBack_Click" Margin="5">
                            <TextBlock>
                                <Run FontFamily="Segoe UI Emoji" Text="&#x2B05;"/>
                                <Run Text=" Quay lai"/>
                            </TextBlock>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- ================= FOOTER ================= -->
        <Border Grid.Row="2" Background="#27AE60" CornerRadius="8" Padding="16"
                Margin="0,20,0,0" Visibility="Collapsed" x:Name="pnlResult">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock x:Name="txtResult" FontSize="16" FontWeight="Bold" Foreground="White">
                        <Run FontFamily="Segoe UI Emoji" Text="&#x1F389;"/>
                        <Run Text=" Hoan thanh!"/>
                    </TextBlock>
                    <TextBlock x:Name="txtResultDetail" Foreground="#E8F8F5"/>
                </StackPanel>
                <TextBlock Grid.Column="1" x:Name="txtScore" FontSize="20"
                           FontWeight="Bold" Foreground="White"/>
            </Grid>
        </Border>
    </Grid>
</Window>

