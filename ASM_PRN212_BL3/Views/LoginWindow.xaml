<Window x:Class="ASM_PRN212_BL3.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Chọn Phương Thức - Flashcard Quiz App" 
        Height="676" Width="660"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Grid Margin="0,0,10,-6">
        <Border Background="White" 
                CornerRadius="15" 
                Margin="25"
                Padding="35"
                BorderBrush="{DynamicResource PrimaryBrush}"
                BorderThickness="2">
            <Border.Effect>
                <DropShadowEffect BlurRadius="25" Opacity="0.15" ShadowDepth="5"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center">
                <!-- Logo/Title -->
                <Border Background="{DynamicResource PrimaryBrush}" Width="70" Height="70" CornerRadius="35" 
                        HorizontalAlignment="Center" Margin="0,0,0,15">
                    <TextBlock Text="FQ" FontSize="28" FontWeight="Bold" 
                               Foreground="White" HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Border>

                <TextBlock Text="Flashcard Quiz" 
                           FontSize="28" FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Foreground="#333"/>
                <TextBlock Text="Ứng dụng học từ vựng" 
                           FontSize="13" 
                           HorizontalAlignment="Center" 
                           Foreground="#666" 
                           Margin="0,5,0,30"/>

                <!-- Hướng dẫn -->
                <TextBlock Text="Chọn phương thức đăng nhập:" 
                           FontSize="14" 
                           HorizontalAlignment="Center" 
                           Foreground="#555" 
                           Margin="0,0,0,20"/>

                <!-- Button Admin -->
                <Button x:Name="btnAdmin" 
                        Style="{DynamicResource PrimaryButton}"
                        Margin="0,0,0,12"
                        Click="BtnAdmin_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Quản Trị Viên (Admin)" FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock Text="Thêm, sửa, xóa flashcard" FontSize="11" Opacity="0.85"/>
                        </StackPanel>
                    </StackPanel>
                </Button>

                <!-- Button Student -->
                <Button x:Name="btnStudent" 
                        Style="{DynamicResource SecondaryButton}"
                        Margin="0,0,0,12"
                        Click="BtnStudent_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Sinh Viên (Student)" FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock Text="Học và làm quiz" FontSize="11" Opacity="0.85"/>
                        </StackPanel>
                    </StackPanel>
                </Button>

                <!-- Footer -->
                <TextBlock Text="PRN212 - Flashcard Quiz Application" 
                           FontSize="10" 
                           HorizontalAlignment="Center" 
                           Foreground="#999" 
                           Margin="0,25,0,0" Height="16"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
