<Window x:Class="ASM_PRN212_BL3.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Chon Phuong Thuc - Flashcard Quiz App" 
        Height="480" Width="480"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Grid>
        <Border Background="White" 
                CornerRadius="15" 
                Margin="25"
                Padding="35">
            <Border.Effect>
                <DropShadowEffect BlurRadius="25" Opacity="0.15" ShadowDepth="5"/>
            </Border.Effect>
            
            <StackPanel VerticalAlignment="Center">
                <!-- Logo/Title -->
                <Border Background="#007ACC" Width="70" Height="70" CornerRadius="35" 
                        HorizontalAlignment="Center" Margin="0,0,0,15">
                    <TextBlock Text="FQ" FontSize="28" FontWeight="Bold" 
                               Foreground="White" HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Border>
                
                <TextBlock Text="Flashcard Quiz" 
                           FontSize="28" FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Foreground="#333"/>
                <TextBlock Text="Ung dung hoc tu vung" 
                           FontSize="13" 
                           HorizontalAlignment="Center" 
                           Foreground="#666" 
                           Margin="0,5,0,30"/>

                <!-- Huong dan -->
                <TextBlock Text="Chon phuong thuc dang nhap:" 
                           FontSize="14" 
                           HorizontalAlignment="Center" 
                           Foreground="#555" 
                           Margin="0,0,0,20"/>

                <!-- Button Admin -->
                <Button x:Name="btnAdmin" 
                        Padding="20,18"
                        Margin="0,0,0,12"
                        FontSize="15"
                        Background="#007ACC"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        HorizontalContentAlignment="Stretch"
                        Click="BtnAdmin_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Border Background="#0056A3" Width="40" Height="40" CornerRadius="20" Margin="0,0,15,0">
                            <TextBlock Text="A" FontSize="18" FontWeight="Bold" 
                                       Foreground="White" HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Quan Tri Vien (Admin)" FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock Text="Them, sua, xoa flashcard" FontSize="11" Opacity="0.85"/>
                        </StackPanel>
                    </StackPanel>
                </Button>

                <!-- Button Student -->
                <Button x:Name="btnStudent" 
                        Padding="20,18"
                        Margin="0,0,0,12"
                        FontSize="15"
                        Background="#28A745"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        HorizontalContentAlignment="Stretch"
                        Click="BtnStudent_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Border Background="#1E7E34" Width="40" Height="40" CornerRadius="20" Margin="0,0,15,0">
                            <TextBlock Text="S" FontSize="18" FontWeight="Bold" 
                                       Foreground="White" HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Sinh Vien (Student)" FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock Text="Hoc va lam quiz" FontSize="11" Opacity="0.85"/>
                        </StackPanel>
                    </StackPanel>
                </Button>

                <!-- Footer -->
                <TextBlock Text="PRN212 - Flashcard Quiz Application" 
                           FontSize="10" 
                           HorizontalAlignment="Center" 
                           Foreground="#999" 
                           Margin="0,25,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
