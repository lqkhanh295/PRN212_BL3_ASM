<Window x:Class="ASM_PRN212_BL3.Views.QuizWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Học Flashcard - Chế Độ Quiz" 
        Height="700" Width="950"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20" BorderBrush="{DynamicResource PrimaryBrush}" BorderThickness="2">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Opacity="0.1" ShadowDepth="0"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="txtWelcome" Text="Xin chào, Sinh Viên!" 
                               FontSize="22" FontWeight="Bold" Foreground="#2C3E50"/>
                    <TextBlock Text="Chọn bộ thẻ để bắt đầu học" 
                               FontSize="13" Foreground="#7F8C8D" Margin="0,4,0,0"/>
                </StackPanel>

                <Button x:Name="btnMatchingMode" Grid.Column="1" 
                        Content="🎯 Chế độ Ghép thẻ" 
                        Style="{DynamicResource SecondaryButton}"
                        Margin="0,0,10,0"
                        Click="BtnMatchingMode_Click"/>

                <Button x:Name="btnLogout" Grid.Column="2" 
                        Content="🚪 Đăng Xuất" 
                        Style="{DynamicResource PrimaryButton}"
                        Background="#E74C3C"
                        Foreground="White"
                        Click="BtnLogout_Click"/>
            </Grid>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: Danh sách Deck -->
            <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="20" Margin="0,0,15,0" BorderBrush="{DynamicResource PrimaryBrush}" BorderThickness="1.5">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" Opacity="0.1" ShadowDepth="0"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Chọn bộ thẻ" 
                               FontSize="16" FontWeight="Bold" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,15"/>

                    <ListBox x:Name="lstDecks" Grid.Row="1"
                             BorderThickness="0"
                             Background="Transparent"
                             SelectionChanged="LstDecks_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="12" Margin="0,0,0,8" 
                                        Background="#F8F9FA" 
                                        CornerRadius="6"
                                        Cursor="Hand">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" 
                                                   FontSize="14" FontWeight="SemiBold"
                                                   Foreground="#2C3E50"/>
                                        <TextBlock FontSize="11" Foreground="#95A5A6" Margin="0,4,0,0">
                                            <Run Text="{Binding CardCount, Mode=OneWay}"/>
                                            <Run Text=" thẻ"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="Bd"
                                                    Background="Transparent"
                                                    CornerRadius="8"
                                                    SnapsToDevicePixels="true">
                                                <ContentPresenter />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="#E3F2FD"/>
                                                    <Setter TargetName="Bd" Property="BorderBrush" Value="#2196F3"/>
                                                    <Setter TargetName="Bd" Property="BorderThickness" Value="2"/>
                                                    <Setter Property="Panel.ZIndex" Value="1"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="#E8F4F8"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </Grid>
            </Border>

            <!-- RIGHT: Flashcard Display -->
            <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="30" Margin="15,0,0,0" BorderBrush="{DynamicResource PrimaryBrush}" BorderThickness="1.5">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" Opacity="0.1" ShadowDepth="0"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Progress -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,25">
                        <TextBlock x:Name="txtProgress" Text="Thẻ: 1 / 4" 
                                   FontSize="15" FontWeight="SemiBold"
                                   HorizontalAlignment="Right"
                                   Foreground="#34495E"/>
                        <ProgressBar x:Name="progressBar" Height="6" Margin="0,10,0,0"
                                     Background="#ECF0F1" 
                                     Foreground="{DynamicResource PrimaryBrush}"
                                     BorderThickness="0"/>
                    </StackPanel>

                    <!-- Flashcard Container -->
                    <Grid Grid.Row="1">
                        <Viewbox Stretch="Uniform" VerticalAlignment="Center">
                            <Border x:Name="cardBorder"
                                    Width="500" Height="320"
                                    Background="#FAFBFC" 
                                    CornerRadius="20" 
                                    Cursor="Hand"
                                    MouseLeftButtonDown="CardBorder_Click"
                                    Padding="40">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="30" Opacity="0.15" ShadowDepth="5" Color="#3498DB"/>
                                </Border.Effect>
                                <Border.RenderTransform>
                                    <ScaleTransform x:Name="CardScale" ScaleX="1" ScaleY="1"/>
                                </Border.RenderTransform>
                                <Border.RenderTransformOrigin>0.5,0.5</Border.RenderTransformOrigin>

                                <Grid>
                                    <!-- Main Content with ScrollViewer -->
                                    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Label -->
                                        <TextBlock Grid.Row="0"
                                                   x:Name="txtCardLabel" 
                                                   Text="THUẬT NGỪA" 
                                                   FontSize="11" 
                                                   Foreground="#95A5A6" 
                                                   FontWeight="SemiBold"
                                                   HorizontalAlignment="Center" 
                                                   Margin="0,0,0,20"/>

                                        <!-- Content with ScrollViewer -->
                                        <ScrollViewer Grid.Row="1"
                                                      VerticalScrollBarVisibility="Auto"
                                                      HorizontalScrollBarVisibility="Disabled"
                                                      MaxHeight="200"
                                                      Padding="5">
                                            <TextBlock x:Name="txtCardContent" 
                                                       Text="Chọn bộ thẻ để bắt đầu" 
                                                       FontSize="28" 
                                                       FontWeight="SemiBold" 
                                                       TextWrapping="Wrap" 
                                                       TextAlignment="Center"
                                                       Foreground="#2C3E50"
                                                       MaxWidth="380"
                                                       LineHeight="36"/>
                                        </ScrollViewer>

                                        <!-- Hint -->
                                        <TextBlock Grid.Row="2"
                                                   Text="(Click vào thẻ để lật)" 
                                                   FontSize="12" 
                                                   Foreground="#BDC3C7" 
                                                   HorizontalAlignment="Center" 
                                                   Margin="0,25,0,0"
                                                   FontStyle="Italic"/>
                                    </Grid>

                                    <!-- Bookmark indicator -->
                                    <TextBlock x:Name="txtBookmark" 
                                               Text="★" 
                                               FontSize="28"
                                               Foreground="#F39C12"
                                               HorizontalAlignment="Right" 
                                               VerticalAlignment="Top"
                                               Margin="0,-5,-5,0" 
                                               Visibility="Collapsed"/>
                                </Grid>
                            </Border>
                        </Viewbox>
                    </Grid>

                    <!-- Navigation and Assessment buttons -->
                    <StackPanel Grid.Row="2" Margin="0,25,0,0">
                        <!-- Self-assessment buttons -->
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center" 
                                    Margin="0,0,0,15"
                                    x:Name="pnlAssessment" 
                                    Visibility="Collapsed">
                            <Button x:Name="btnWrong" 
                                    Content="❌ Chưa Thuộc" 
                                    Padding="25,14" 
                                    Margin="8"
                                    Style="{DynamicResource SecondaryButton}"
                                    Background="#E74C3C" 
                                    Foreground="White"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    BorderThickness="0" 
                                    Cursor="Hand"
                                    Click="BtnWrong_Click"/>
                            <Button x:Name="btnCorrect" 
                                    Content="✅ Đã Thuộc" 
                                    Padding="25,14" 
                                    Margin="8"
                                    Style="{DynamicResource SecondaryButton}"
                                    Background="#27AE60" 
                                    Foreground="White"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    BorderThickness="0" 
                                    Cursor="Hand"
                                    Click="BtnCorrect_Click"/>
                        </StackPanel>

                        <!-- Navigation buttons -->
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center">
                            <Button x:Name="btnPrevious" 
                                    Content="⬅ Trước" 
                                    Padding="20,12" 
                                    Margin="5"
                                    Background="#95A5A6" 
                                    Foreground="White"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    BorderThickness="0" 
                                    Cursor="Hand"
                                    Click="BtnPrevious_Click"/>
                            <Button x:Name="btnShuffle" 
                                    Content="🔀 Trộn Thẻ" 
                                    Padding="20,12" 
                                    Margin="5"
                                    Background="#16A085" 
                                    Foreground="White"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    BorderThickness="0" 
                                    Cursor="Hand"
                                    Click="BtnShuffle_Click"/>
                            <Button x:Name="btnNext" 
                                    Content="Sau ➡" 
                                    Padding="20,12" 
                                    Margin="5"
                                    Background="#3498DB" 
                                    Foreground="White"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    BorderThickness="0" 
                                    Cursor="Hand"
                                    Click="BtnNext_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- FOOTER: Quiz Result -->
        <Border Grid.Row="2" x:Name="pnlResult" 
                Background="{DynamicResource SecondaryBrush}" 
                CornerRadius="10" 
                Padding="20" 
                Margin="0,20,0,0"
                Visibility="Collapsed">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Opacity="0.15" ShadowDepth="0"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="txtResult" 
                               Text="Kết quả: 0/0 (0%)" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="#26169E"/>
                    <TextBlock x:Name="txtResultDetail" 
                               Text="" 
                               FontSize="13" 
                               Foreground="#26169E" 
                               Margin="0,5,0,0"/>
                </StackPanel>

                <Button Grid.Column="1" 
                        x:Name="btnRestart" 
                        Content="🔄 Học lại" 
                        Style="{DynamicResource SecondaryButton}"
                        Click="BtnRestart_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>