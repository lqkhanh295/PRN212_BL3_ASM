<Window x:Class="ASM_PRN212_BL3.Views.QuizWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Hoc Flashcard - Quiz Mode" 
        Height="650" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="txtWelcome" Text="Xin chao, Khach!" 
                               FontSize="18" FontWeight="SemiBold" Foreground="#333"/>
                    <TextBlock Text="Chon bo the de bat dau hoc" 
                               FontSize="12" Foreground="#666"/>
                </StackPanel>

                <Button x:Name="btnLogout" Grid.Column="1" 
                        Content="?? Dang Xuat" 
                        Padding="15,8"
                        Background="#DC3545"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="BtnLogout_Click"/>
            </Grid>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: Danh sach Deck -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="15" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="?? Chon bo the" 
                               FontSize="16" FontWeight="SemiBold" 
                               Margin="0,0,0,10"/>

                    <ListBox x:Name="lstDecks" Grid.Row="1"
                             BorderThickness="1" BorderBrush="#DDD"
                             SelectionChanged="LstDecks_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="10" Margin="2">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" 
                                                   FontSize="14" FontWeight="SemiBold"/>
                                        <TextBlock FontSize="11" Foreground="#666">
                                            <Run Text="{Binding CardCount, Mode=OneWay}"/>
                                            <Run Text=" the"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- RIGHT: Flashcard Display -->
            <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="20" Margin="10,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Progress -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                        <TextBlock x:Name="txtProgress" Text="The: 0 / 0" 
                                   FontSize="14" HorizontalAlignment="Center"/>
                        <ProgressBar x:Name="progressBar" Height="8" Margin="0,8,0,0"
                                     Background="#E0E0E0" Foreground="#007ACC"/>
                    </StackPanel>

                    <!-- Flashcard -->
                    <Border Grid.Row="1" x:Name="cardBorder"
                            Background="#F8F9FA" 
                            CornerRadius="15" 
                            Cursor="Hand"
                            MouseLeftButtonDown="CardBorder_Click">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" Opacity="0.15" ShadowDepth="3"/>
                        </Border.Effect>
                        
                        <Grid>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="30">
                                <TextBlock x:Name="txtCardLabel" Text="THUAT NGU" 
                                           FontSize="12" Foreground="#999" 
                                           HorizontalAlignment="Center" Margin="0,0,0,15"/>
                                <TextBlock x:Name="txtCardContent" Text="Chon bo the de bat dau" 
                                           FontSize="28" FontWeight="SemiBold" 
                                           TextWrapping="Wrap" TextAlignment="Center"
                                           Foreground="#333"/>
                                <TextBlock Text="(Click vao the de lat)" 
                                           FontSize="11" Foreground="#999" 
                                           HorizontalAlignment="Center" Margin="0,20,0,0"/>
                            </StackPanel>

                            <!-- Bookmark indicator -->
                            <TextBlock x:Name="txtBookmark" Text="?" FontSize="24"
                                       HorizontalAlignment="Right" VerticalAlignment="Top"
                                       Margin="15" Visibility="Collapsed"/>
                        </Grid>
                    </Border>

                    <!-- Self-assessment buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" 
                                HorizontalAlignment="Center" Margin="0,20,0,0"
                                x:Name="pnlAssessment" Visibility="Collapsed">
                        <Button x:Name="btnWrong" Content="? Chua thuoc" 
                                Padding="20,12" Margin="5"
                                Background="#DC3545" Foreground="White"
                                BorderThickness="0" Cursor="Hand"
                                Click="BtnWrong_Click"/>
                        <Button x:Name="btnCorrect" Content="? Da thuoc" 
                                Padding="20,12" Margin="5"
                                Background="#28A745" Foreground="White"
                                BorderThickness="0" Cursor="Hand"
                                Click="BtnCorrect_Click"/>
                    </StackPanel>

                    <!-- Navigation buttons -->
                    <StackPanel Grid.Row="3" Orientation="Horizontal" 
                                HorizontalAlignment="Center" Margin="0,15,0,0">
                        <Button x:Name="btnPrevious" Content="? Truoc" 
                                Padding="20,12" Margin="5"
                                Background="#6C757D" Foreground="White"
                                BorderThickness="0" Cursor="Hand"
                                Click="BtnPrevious_Click"/>
                        <Button x:Name="btnShuffle" Content="?? Tron the" 
                                Padding="20,12" Margin="5"
                                Background="#17A2B8" Foreground="White"
                                BorderThickness="0" Cursor="Hand"
                                Click="BtnShuffle_Click"/>
                        <Button x:Name="btnNext" Content="Sau ?" 
                                Padding="20,12" Margin="5"
                                Background="#007ACC" Foreground="White"
                                BorderThickness="0" Cursor="Hand"
                                Click="BtnNext_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- FOOTER: Quiz Result -->
        <Border Grid.Row="2" x:Name="pnlResult" Background="#28A745" 
                CornerRadius="8" Padding="15" Margin="0,15,0,0"
                Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="txtResult" Text="Ket qua: 0/0 (0%)" 
                               FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                    <TextBlock x:Name="txtResultDetail" Text="" 
                               FontSize="12" Foreground="#E8E8E8"/>
                </StackPanel>

                <Button Grid.Column="1" x:Name="btnRestart" Content="?? Hoc lai" 
                        Padding="15,8"
                        Background="White" Foreground="#28A745"
                        BorderThickness="0" Cursor="Hand"
                        Click="BtnRestart_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
