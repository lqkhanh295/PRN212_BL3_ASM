<Window x:Class="ASM_PRN212_BL3.Views.QuizWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Hoc Flashcard - Quiz Mode" 
        Height="700" Width="950"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Opacity="0.1" ShadowDepth="0"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="txtWelcome" Text="Xin chao, Sinh Vien!" 
                               FontSize="22" FontWeight="Bold" Foreground="#2C3E50"/>
                    <TextBlock Text="Chon bo the de bat dau hoc" 
                               FontSize="13" Foreground="#7F8C8D" Margin="0,4,0,0"/>
                </StackPanel>

                <Button x:Name="btnMatchingMode" Grid.Column="1" 
                        Content="?? Che do Ghep the" 
                        Padding="20,10"
                        Background="#9B59B6"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Margin="0,0,10,0"
                        Click="BtnMatchingMode_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="6" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#8E44AD"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="btnLogout" Grid.Column="2" 
                        Content="?? Dang Xuat" 
                        Padding="20,10"
                        Background="#E74C3C"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="BtnLogout_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="6" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#C0392B"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: Danh sach Deck -->
            <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="20" Margin="0,0,15,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" Opacity="0.1" ShadowDepth="0"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="?? Chon bo the" 
                               FontSize="16" FontWeight="Bold" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,15"/>

                    <ListBox x:Name="lstDecks" Grid.Row="1"
                             BorderThickness="0"
                             Background="Transparent"
                             SelectionChanged="LstDecks_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="12" Margin="0,0,0,8" 
                                        Background="#F8F9FA" 
                                        CornerRadius="6"
                                        Cursor="Hand">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#E8F4F8"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" 
                                                   FontSize="14" FontWeight="SemiBold"
                                                   Foreground="#2C3E50"/>
                                        <TextBlock FontSize="11" Foreground="#95A5A6" Margin="0,4,0,0">
                                            <Run Text="{Binding CardCount, Mode=OneWay}"/>
                                            <Run Text=" the"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <ContentPresenter/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </Grid>
            </Border>

            <!-- RIGHT: Flashcard Display -->
            <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="30" Margin="15,0,0,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" Opacity="0.1" ShadowDepth="0"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Progress -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,25">
                        <TextBlock x:Name="txtProgress" Text="The: 1 / 4" 
                                   FontSize="15" FontWeight="SemiBold"
                                   HorizontalAlignment="Right"
                                   Foreground="#34495E"/>
                        <ProgressBar x:Name="progressBar" Height="6" Margin="0,10,0,0"
                                     Background="#ECF0F1" 
                                     Foreground="#3498DB"
                                     BorderThickness="0">
                            <ProgressBar.Style>
                                <Style TargetType="ProgressBar">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ProgressBar">
                                                <Grid>
                                                    <Border Background="{TemplateBinding Background}" 
                                                            CornerRadius="3"/>
                                                    <Border Background="{TemplateBinding Foreground}" 
                                                            CornerRadius="3"
                                                            Width="{TemplateBinding Value}"
                                                            HorizontalAlignment="Left"/>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ProgressBar.Style>
                        </ProgressBar>
                    </StackPanel>

                    <!-- Flashcard Container -->
                    <Grid Grid.Row="1">
                        <Viewbox Stretch="Uniform" VerticalAlignment="Center">
                            <Border x:Name="cardBorder"
                                    Width="500" Height="320"
                                    Background="#FAFBFC" 
                                    CornerRadius="20" 
                                    Cursor="Hand"
                                    MouseLeftButtonDown="CardBorder_Click"
                                    Padding="40">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="30" Opacity="0.15" ShadowDepth="5" Color="#3498DB"/>
                                </Border.Effect>
                                <Border.RenderTransform>
                                    <ScaleTransform x:Name="CardScale" ScaleX="1" ScaleY="1"/>
                                </Border.RenderTransform>
                                <Border.RenderTransformOrigin>0.5,0.5</Border.RenderTransformOrigin>

                                <Grid>
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock x:Name="txtCardLabel" Text="THUAT NGU" 
                                                   FontSize="11" 
                                                   Foreground="#95A5A6" 
                                                   FontWeight="SemiBold"
                                                   HorizontalAlignment="Center" 
                                                   Margin="0,0,0,20"/>
                                        <TextBlock x:Name="txtCardContent" 
                                                   Text="Chon bo the de bat dau" 
                                                   FontSize="36" 
                                                   FontWeight="Bold" 
                                                   TextWrapping="Wrap" 
                                                   TextAlignment="Center"
                                                   Foreground="#2C3E50"
                                                   MaxWidth="400"/>
                                        <TextBlock Text="(Click vao the de lat)" 
                                                   FontSize="12" 
                                                   Foreground="#BDC3C7" 
                                                   HorizontalAlignment="Center" 
                                                   Margin="0,25,0,0"
                                                   FontStyle="Italic"/>
                                    </StackPanel>

                                    <!-- Bookmark indicator -->
                                    <TextBlock x:Name="txtBookmark" 
                                               Text="?" 
                                               FontSize="28"
                                               Foreground="#F39C12"
                                               HorizontalAlignment="Right" 
                                               VerticalAlignment="Top"
                                               Margin="0,-5,-5,0" 
                                               Visibility="Collapsed"/>
                                </Grid>
                            </Border>
                        </Viewbox>
                    </Grid>

                    <!-- Navigation and Assessment buttons -->
                    <StackPanel Grid.Row="2" Margin="0,25,0,0">
                        <!-- Self-assessment buttons -->
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center" 
                                    Margin="0,0,0,15"
                                    x:Name="pnlAssessment" 
                                    Visibility="Collapsed">
                            <Button x:Name="btnWrong" 
                                    Content="? Chua thuoc" 
                                    Padding="25,14" 
                                    Margin="8"
                                    Background="#E74C3C" 
                                    Foreground="White"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    BorderThickness="0" 
                                    Cursor="Hand"
                                    Click="BtnWrong_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            CornerRadius="8" 
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#C0392B"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button x:Name="btnCorrect" 
                                    Content="? Da thuoc" 
                                    Padding="25,14" 
                                    Margin="8"
                                    Background="#27AE60" 
                                    Foreground="White"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    BorderThickness="0" 
                                    Cursor="Hand"
                                    Click="BtnCorrect_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            CornerRadius="8" 
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#229954"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>

                        <!-- Navigation buttons -->
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center">
                            <Button x:Name="btnPrevious" 
                                    Content="? Truoc" 
                                    Padding="20,12" 
                                    Margin="5"
                                    Background="#95A5A6" 
                                    Foreground="White"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    BorderThickness="0" 
                                    Cursor="Hand"
                                    Click="BtnPrevious_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            CornerRadius="6" 
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#7F8C8D"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Opacity" Value="0.5"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button x:Name="btnShuffle" 
                                    Content="?? Tron the" 
                                    Padding="20,12" 
                                    Margin="5"
                                    Background="#16A085" 
                                    Foreground="White"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    BorderThickness="0" 
                                    Cursor="Hand"
                                    Click="BtnShuffle_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            CornerRadius="6" 
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#138D75"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button x:Name="btnNext" 
                                    Content="Sau ?" 
                                    Padding="20,12" 
                                    Margin="5"
                                    Background="#3498DB" 
                                    Foreground="White"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    BorderThickness="0" 
                                    Cursor="Hand"
                                    Click="BtnNext_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            CornerRadius="6" 
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2980B9"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Opacity" Value="0.5"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- FOOTER: Quiz Result -->
        <Border Grid.Row="2" x:Name="pnlResult" 
                Background="#27AE60" 
                CornerRadius="10" 
                Padding="20" 
                Margin="0,20,0,0"
                Visibility="Collapsed">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Opacity="0.15" ShadowDepth="0"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="txtResult" 
                               Text="Ket qua: 0/0 (0%)" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock x:Name="txtResultDetail" 
                               Text="" 
                               FontSize="13" 
                               Foreground="#E8F8F5" 
                               Margin="0,5,0,0"/>
                </StackPanel>

                <Button Grid.Column="1" 
                        x:Name="btnRestart" 
                        Content="?? Hoc lai" 
                        Padding="20,10"
                        Background="White" 
                        Foreground="#27AE60"
                        FontSize="13"
                        FontWeight="Bold"
                        BorderThickness="0" 
                        Cursor="Hand"
                        Click="BtnRestart_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="6" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#ECF0F1"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
