<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net9.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <!-- Tham chiếu đến tầng BLL và Entities -->
  <ItemGroup>
    <ProjectReference Include="..\QuizApp.BLL\QuizApp.BLL.csproj" />
    <ProjectReference Include="..\QuizApp.Entities\QuizApp.Entities.csproj" />
  </ItemGroup>

  <!-- Copy file data.json vào thư mục output khi build -->
  <ItemGroup>
    <None Update="data.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  <ItemGroup>
    <Folder Include="ViewModels\" />
  </ItemGroup>

</Project>
